<div class = "container">
  <hr>
  <div class="row">
    <div class="placeHolder">
      <h1 style="text-align:center; font-size:60px;">Title Here</h1>
      <div style="position:relative; top:100px;"class="wrapper"style = "text-align: center">
        <button  type = "button">Join A Game</button>
      </div>
      <div style="position:relative; top:100px;" class="wrapper" style = "text-align: center">
        <button  type = "button">Start A Game</button>
      </div>

